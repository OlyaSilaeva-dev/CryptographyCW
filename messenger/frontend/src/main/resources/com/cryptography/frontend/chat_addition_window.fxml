<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="306.0" prefWidth="461.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cryptography.frontend.controller.ChatAdditionWindow">
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
   <children>
      <Label prefHeight="30.0" prefWidth="99.0" text="Новый чат">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="28.0" prefWidth="441.0">
         <children>
            <Label prefHeight="25.0" prefWidth="185.0" text="Выберите собеседника:">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="userComboBox" editable="true" prefWidth="150.0" promptText="имя собеседника" />
         </children>
      </HBox>
      <HBox prefHeight="28.0" prefWidth="330.0">
         <children>
            <Label prefHeight="25.0" prefWidth="187.0" text="Выберите алгоритм шифрования:">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="algorithmComboBox" editable="true" prefWidth="150.0" promptText="алгоритм" />
         </children>
      </HBox>
      <HBox prefHeight="28.0" prefWidth="330.0">
         <children>
            <Label prefHeight="25.0" prefWidth="187.0" text="Выберите режим шифрования:">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="cipherModeComboBox" editable="true" prefWidth="150.0" promptText="режим шифрования" />
         </children>
      </HBox>
      <HBox prefHeight="28.0" prefWidth="330.0">
         <children>
            <Label prefHeight="25.0" prefWidth="187.0" text="Выберите режим набивки:">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="paddingModeComboBox" editable="true" prefWidth="150.0" promptText="режим набивки" />
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" prefHeight="74.0" prefWidth="441.0">
         <children>
            <Button fx:id="chatCreationButton" mnemonicParsing="false" onAction="#createChat" prefHeight="25.0" prefWidth="132.0" text="Создать чат" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onReturnButton" prefHeight="29.0" prefWidth="133.0" text="Вернуться к чатам">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
